{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "..",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": false,
    "incremental": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmit": true,
    "noImplicitAny": true,
    "noStrictGenericChecks": true,
    "paths": {
      "src/*": [ "src/*" ]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "typeRoots": [ // relative to package.json path
      "../node_modules/@types",
      "../src/typings"
    ]
  },
  "include": [ // relative to ./configs/tsconfig.json
    "../src/**/*"
  ],
  "exclude": [ // relative to ./configs/tsconfig.json
    "../node_modules",
    "../configs",
    "../dist",
    "../docs",
    "../coverage",
    "../devops"
  ]
}
